                                                <telerik:BarIndicator x:Name="Tcccon1_1" Value="200" BorderBrush="Transparent" Background="Red" Margin="0,0,0,0" StartWidth="0.3" FontSize="14"/>
                                            </telerik:VerticalLinearScale.Indicators>
                                            <telerik:VerticalLinearScale.CustomItems>
                                                <Border BorderBrush="#72FFFFFF" BorderThickness="1" telerik:ScaleObject.Value="0" telerik:ScaleObject.Location="OverCenter" telerik:ScaleObject.RelativeHeight="0.8*" telerik:ScaleObject.RelativeWidth="1*" Width="79" Height="1" Margin="33,0,0,0" HorizontalAlignment="Left" />
                                            </telerik:VerticalLinearScale.CustomItems>
                                        </telerik:VerticalLinearScale>
                                    </telerik:RadVerticalLinearGauge>
                                    <!--柱状图对应值-->
                                    <TextBlock x:Name="Tcccon1_2" Style="{StaticResource barGaugeValue}" Text="200"/>
                                    <TextBlock Style="{StaticResource barGaugeUnit}" Text="KPa" />
                                </Grid>
                            </Grid>



                        </StackPanel>
                        <StackPanel Height="155" Width="120" Margin="40,0,0,0" >
                            <Grid Height="155" Width="120">
                                <StackPanel Style="{StaticResource monitorHeader}">
                                    <TextBlock Text="//" Style="{StaticResource monitorHeaderLabel}" />
