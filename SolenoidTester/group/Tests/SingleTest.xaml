                                        <telerik:VerticalLinearScale Name="targetPressure2" Min="0" Max="1000" MajorTickStep="200" RelativeWidth="1" RelativeHeight="0.8" RelativeY="0" RelativeX="0.5" StartWidth="0.01" EndWidth="0.01" MajorTickBackground="#19FFFFFF" MiddleTickBackground="Transparent" MinorTickBackground="Transparent" LabelOffset="32" StrokeThickness="0" FontSize="10" FontFamily="Arial Narrow" MajorTickLocation="Outside" MajorTickOffset="-53"  MinorTicks="5"  MajorTickRelativeWidth="80" Fill="Transparent" Foreground="#99FFFFFF">
                                            <telerik:VerticalLinearScale.Indicators>
                                                <!--柱状图对应值-->
                                                <telerik:BarIndicator x:Name="Tcccon2_1" Value="200" BorderBrush="Transparent" Background="Orange" Margin="0,0,0,0" StartWidth="0.3" FontSize="14"/>
